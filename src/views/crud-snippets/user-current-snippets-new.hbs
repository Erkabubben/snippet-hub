<h1>
  <span class="far fa-plus-square"></span> {{user.username}}'s profile
</h1>

<p>NEW SNIPPET</p>

<form method="post" action="./create">
  {{>validationSummary}}
  <div class="form-group">
    <input class="form-control" name="name" placeholder="Snippet name" required="required" autofocus="autofocus" />
    <br>
    <textarea class="form-control" name="code" placeholder="Code" required="required" autofocus="autofocus"></textarea>
  </div>
  <button type="submit" class="btn btn-lg btn-primary">Register</button>
</form>